pipeline {
    agent {
        docker {
            image 'node:lts-alpine'
            args '-u root -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    environment {
        APP_NAME = 'internet-speed-test'
        DOCKER_IMAGE = "myapp:${env.BUILD_NUMBER}"
        CONTAINER_NAME = 'myapp_container'
        PORT = '3000'
    }

    stages {
        stage('Setup Environment') {
            steps {
                script {
                    sh 'apk add --no-cache docker-cli curl'
                }
            }
        }

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Unit Testing') {
            steps {
                script {
                    echo "Installing dependencies and running tests..."
                    sh 'npm install'
                    sh 'npm test'
                }
            }
        }

        stage('Build Artifact') {
            steps {
                script {
                    echo "Building Docker image..."
                    sh "docker build -t ${DOCKER_IMAGE} ."
                }
            }
        }

        stage('Deployment') {
            steps {
                script {
                    echo "Deploying application..."
                    // Stop and remove existing container
                    sh "docker rm -f ${CONTAINER_NAME} || true"
                    // Run the new container from the built image
                    sh "docker run -d -p ${PORT}:3000 --name ${CONTAINER_NAME} ${DOCKER_IMAGE}"
                }
            }
        }

        stage('Smoke Test / Health Check') {
            steps {
                script {
                    echo "Waiting for service to start..."
                    sleep 5
                    echo "Checking health service..."
                    // Check health from inside the container to avoid network issues between sibling containers
                    sh "docker exec ${CONTAINER_NAME} curl -f http://localhost:3000 || exit 1"
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        success {
            echo 'Pipeline completed successfully.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
