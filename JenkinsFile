pipeline {
    agent any

    environment {
        APP_NAME = 'internet-speed-test'
        DOCKER_IMAGE = "myapp:${env.BUILD_NUMBER}"
        CONTAINER_NAME = 'myapp_container'
        PORT = '3000'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Unit Testing') {
            steps {
                script {
                    echo "Installing dependencies and running tests..."
                    if (isUnix()) {
                        sh 'npm install'
                        sh 'npm test'
                    } else {
                        bat 'npm install'
                        bat 'npm test'
                    }
                }
            }
        }

        stage('Build Artifact') {
            steps {
                script {
                    echo "Building Docker image..."
                    if (isUnix()) {
                        sh "docker build -t ${DOCKER_IMAGE} ."
                    } else {
                        bat "docker build -t ${DOCKER_IMAGE} ."
                    }
                }
            }
        }

        stage('Deployment') {
            steps {
                script {
                    echo "Deploying application..."
                    if (isUnix()) {
                        // Stop and remove existing container
                        sh "docker rm -f ${CONTAINER_NAME} || true"
                        // Run the new container from the built image
                        sh "docker run -d -p ${PORT}:3000 --name ${CONTAINER_NAME} ${DOCKER_IMAGE}"
                    } else {
                        // Stop and remove existing container
                        bat "docker rm -f ${CONTAINER_NAME} || exit 0"
                        // Run the new container from the built image
                        bat "docker run -d -p ${PORT}:3000 --name ${CONTAINER_NAME} ${DOCKER_IMAGE}"
                    }
                }
            }
        }

        stage('Smoke Test / Health Check') {
            steps {
                script {
                    echo "Waiting for service to start..."
                    sleep 5
                    echo "Checking health service..."
                    if (isUnix()) {
                        sh "curl -f http://localhost:${PORT} || exit 1"
                    } else {
                         powershell "try { \$r = Invoke-WebRequest -Uri 'http://localhost:${PORT}' -UseBasicParsing; if (\$r.StatusCode -ne 200) { exit 1 } } catch { exit 1 }"
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        success {
            echo 'Pipeline completed successfully.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
